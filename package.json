{
  "name": "ng-smooth-carousel",
  "version": "1.1.0",
  "description": "A smooth, customizable carousel component for Angular applications",
  "author": "Kinley Rabgay",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kinleyrabgay/ng-smooth-carousel"
  },
  "keywords": [
    "angular",
    "carousel",
    "slider",
    "component",
    "typescript",
    "smooth",
    "responsive"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "cd projects/ng-smooth-carousel && ng-packagr -p ng-package.json",
    "build:demo": "ng build angular14-demo --configuration production",
    "demo": "ng serve angular14-demo --open",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "prepare:package": "cp README.md CHANGELOG.md LICENSE dist/ng-smooth-carousel/",
    "publish:lib": "npm run build:lib && npm run prepare:package && cd dist/ng-smooth-carousel && npm publish"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.0",
    "@angular/cli": "^14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@types/node": "^16.18.126",
    "ng-packagr": "^14.0.0",
    "terser": "^5.39.0",
    "typescript": "~4.7.2"
  },
  "peerDependencies": {
    "@angular/common": "^14.0.0",
    "@angular/core": "^14.0.0"
  }
}
